{
  "name": "ts-backend-template",
  "version": "1.0.0",
  "description": "A template for a TypeScript backend project",
  "scripts": {
    "start:dev": "nodemon",
    "start:prod": "node --env-file .env ./dist/index.js",
    "build": "rm -rf dist && tsc -p ./tsconfig.prod.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "packageManager": "yarn@4.6.0",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "2.1.8",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.14.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "dotenv": "^16.4.7"
  }
}
